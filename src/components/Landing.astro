<section
  class="relative z-0 flex items-center justify-center w-full h-screen overflow-hidden"
>
  <div class="flex flex-col w-full h-screen md:flex-row">
    <div class="w-full md:w-1/2 h-1/2 md:h-full bg-red-700 z-[1]"></div>
    <div class="w-full md:w-1/2 h-1/2 md:h-full bg-blue-700 z-[1]"></div>
  </div>
  <div class="absolute bottom-0 right-0 w-full z-[10]">
    <img
      class="object-contain w-full h-auto transform translate-x-[20.5px]"
      src="/images/capitol.png"
      alt="Capitol Building"
    />
  </div>
  <div class="absolute top-0 right-0 w-full h-screen z-[20]">
    <div class="relative w-full h-full">
      <a href="/vote" class="absolute bottom-0 left-0">
        <img
          class="object-cover max-w-[1500px] transition-transform duration-300 ease-in-out hover:scale-110"
          src="/images/trump.png"
          alt="Donald Trump Image"
        />
      </a>
      <a href="/vote" class="absolute bottom-0 right-0">
        <img
          class="object-cover max-w-[1500px] transition-transform duration-300 ease-in-out hover:scale-110"
          src="/images/kamala.png"
          alt="Kamala Harris Image"
        />
      </a>
    </div>
  </div>
  <div class="absolute top-[10%] z-[20] w-fit h-fit">
    <h1
      class="font-bold text-center text-white uppercase text-8xl font-josefin"
    >
      PEPE VOTE
    </h1>
    <p class="text-4xl font-bold text-center text-white uppercase font-josefin">
      Vote now!
    </p>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const trumpImage = document.querySelector('img[alt="Donald Trump Image"]');
    const kamalaImage = document.querySelector(
      'img[alt="Kamala Harris Image"]'
    );
    const trumpAudio = new Audio("/sounds/eagle.mp3");
    const kamalaAudio = new Audio("/sounds/miau.mp3");

    trumpAudio.volume = 0.05;
    kamalaAudio.volume = 0.05;
    //@ts-ignore
    const playAudio = (audio) => {
      audio.currentTime = 0;
      audio
        .play()
        //@ts-ignore
        .catch((error) => console.log("Error playing audio:", error));
    };
    //@ts-ignore
    const stopAudio = (audio) => {
      audio.pause();
      audio.currentTime = 0;
    };

    if (trumpImage) {
      trumpImage.addEventListener("mouseover", () => playAudio(trumpAudio));
      trumpImage.addEventListener("mouseout", () => stopAudio(trumpAudio));
    }

    if (kamalaImage) {
      kamalaImage.addEventListener("mouseover", () => playAudio(kamalaAudio));
      kamalaImage.addEventListener("mouseout", () => stopAudio(kamalaAudio));
    }
  });
</script>
